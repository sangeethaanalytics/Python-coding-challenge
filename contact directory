      "source": [
        "# Initial 2D contact list\n",
        "contacts = [\n",
        "    [\"Sangeetha\", \"9876543210\", \"sangee@example.com\"],\n",
        "    [\"Riya\", \"9123456780\", \"riya@gmail.com\"],\n",
        "    [\"Karan\", \"9988776655\", \"karan@yahoo.com\"]\n",
        "]\n",
        "\n",
        "# 1. Add a new contact\n",
        "name = input(\"Enter contact name: \")\n",
        "phone = input(\"Enter phone number: \")\n",
        "email = input(\"Enter email address: \")\n",
        "\n",
        "contacts.append([name, phone, email])\n",
        "\n",
        "print(\"\\nContact added successfully!\\n\")\n",
        "\n",
        "# 2. Sort contacts alphabetically by name\n",
        "contacts.sort(key=lambda x: x[0])\n",
        "\n",
        "print(\"----- All Contacts (Sorted) -----\")\n",
        "for c in contacts:\n",
        "    print(f\"Name: {c[0]}, Phone: {c[1]}, Email: {c[2]}\")\n",
        "\n",
        "# 3. Display only the first 3 contacts\n",
        "print(\"\\n----- First 3 Contacts -----\")\n",
        "for c in contacts[:3]:\n",
        "    print(f\"Name: {c[0]}, Phone: {c[1]}, Email: {c[2]}\")\n",
        "\n",
        "# 4. Search contacts (partial match)\n",
        "search_term = input(\"\\nEnter name to search: \").lower()\n",
        "\n",
        "print(\"\\n----- Search Results -----\")\n",
        "found = False\n",
        "for c in contacts:\n",
        "    if search_term in c[0].lower():   # partial match\n",
        "        print(f\"Name: {c[0]}, Phone: {c[1]}, Email: {c[2]}\")\n",
        "        found = True\n",
        "\n",
        "if not found:\n",
        "    print(\"No matching contacts found.\")\n"
      ]
    }
  ]
}